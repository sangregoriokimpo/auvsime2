<?xml version="1.0"?>
<robot name="lidar3d_module" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- 3D LiDAR using Gazebo Harmonic gpu_lidar (Ogre2).
       Publishes gz.msgs.PointCloudPacked -> bridge to sensor_msgs/PointCloud2.

       Params:
         parent, link_name
         mount_xyz, mount_rpy        (pose of lidar link in parent)
         radius, length, mass        (visual/collision + inertial)
         topic                       (GZ transport topic, e.g., /cube/points)
         update_rate                 (Hz)
         range_min, range_max
         h_samples, h_min, h_max     (horizontal)
         v_samples, v_min, v_max     (vertical)
  -->
  <xacro:macro name="lidar3d_module"
               params="parent link_name
                       mount_xyz mount_rpy
                       radius length mass
                       topic update_rate
                       range_min range_max
                       h_samples h_min h_max
                       v_samples v_min v_max">

    <link name="${link_name}">
      <visual>
        <geometry><cylinder radius="${radius}" length="${length}"/></geometry>
        <material name="darkgray"><color rgba="0.3 0.3 0.3 1"/></material>
      </visual>
      <collision>
        <geometry><cylinder radius="${radius}" length="${length}"/></geometry>
      </collision>
      <inertial>
        <mass value="${mass}"/>
        <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>

    <joint name="${link_name}_mount" type="fixed">
      <parent link="${parent}"/>
      <child  link="${link_name}"/>
      <origin xyz="${mount_xyz}" rpy="${mount_rpy}"/>
    </joint>

    <!-- Gazebo 3D LiDAR -->
    <gazebo reference="${link_name}">
      <sensor name="${link_name}_sensor" type="gpu_lidar">
        <always_on>true</always_on>
        <update_rate>${update_rate}</update_rate>
        <visualize>true</visualize>

        <lidar>
          <scan>
            <horizontal>
              <samples>${h_samples}</samples>
              <min_angle>${h_min}</min_angle>
              <max_angle>${h_max}</max_angle>
            </horizontal>
            <vertical>
              <samples>${v_samples}</samples>
              <min_angle>${v_min}</min_angle>
              <max_angle>${v_max}</max_angle>
            </vertical>
          </scan>
          <range>
            <min>${range_min}</min>
            <max>${range_max}</max>
            <resolution>0.01</resolution>
          </range>
        </lidar>

        <!-- Gazebo Transport topic -->
        <topic>${topic}</topic>
      </sensor>
    </gazebo>
  </xacro:macro>
</robot>
